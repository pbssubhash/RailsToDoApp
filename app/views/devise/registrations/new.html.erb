

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="panel panel-default">
    <div class= "panel-heading"
    <h1>It's never too late to be awesome! Sign Up Now!</h1>
    </div>

    <div class="panel-body">


        <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
      </div>

      <div class="form-group">
         <%= f.submit "Sign up", class: "btn btn-primary"%>
      </div>
      <div class="panel-footer">If you've any issues during sign up, feel free to shoot a mail at pbssubhash@gmail.com</div>
      </div>
  </div>
<% end %>

<%= link_to "Already have an account?", new_user_session_path, class: "btn btn-danger" %>
