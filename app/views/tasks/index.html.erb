
<h1>Here are your tasks!</h1>
<div id= "tasks", class="transitions-enabled">
    <% @tasks.each do |task| %>
    <div class="box">
      <div class="container">
      <div class="panel panel-default">

            <div class="panel-heading"><h4><%= task.title%></h4></div>
            <div class="panel-body"><%= task.whattodo %></div>
              <br>
            </br>
            <div class="panel-footer">
            <%= link_to 'Edit', edit_task_path(task),:class => "btn btn-primary"%>
        <%= link_to 'Done', task_path(task), method: :delete, :class => "btn btn-warning"%>
      </div>
      </div>
      </div>
    </div>
    </div>


<%end%>
</div>
<br>

</br>

<center><%= will_paginate @tasks %></center>
